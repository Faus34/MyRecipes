<div class="row mt-3">
  <div class="col-6 offset-3">
    <% flash.each do |name, msg| %>
      <div class="alert alert-<%= name %> alert-dismissible fade show">
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        <%= msg %>
      </div>
    <% end %>
  </div>
</div>