<%= render 'shared/errors', obj: @chef %>

<div class="row">
  <%= form_for(@chef, :html => {role: "form"}) do |f| %>
    <div class="col mb-3">
      <%= f.label :chefname, "Choose Chefname", class: "form-label" %>
      <div class="col-3">
        <%= f.text_field :chefname, class: "form-control", placeholder: "Enter your name", autofocus: true %>
      </div>
    </div>
    <div class="col mb-3">
      <%= f.label :email, class: "form-label" %>
      <div class="col-3">
        <%= f.email_field :email, class: "form-control", placeholder: "Enter your email" %>
      </div>
    </div>
    <div class="col mb-3">
      <%= f.label :password, class: "form-label" %>
      <div class="col-3">
        <%= f.password_field :password, class: "form-control", placeholder: "Choose a password" %>
      </div>
    </div>
    <div class="col mb-3">
      <%= f.label :password_confirmation, "Confirm Password" %>
      <div class="col-3">
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm password" %>
      </div>
    </div>
    <%= f.submit(@chef.new_record? ? "Create my account" : "Update my account", class: "btn btn-primary btn-lg") %>
  <% end %>
  <div class="offset-4 colormatch">
    [ <%= link_to "Cancel request and return to recipes listing", recipes_path %> ]
  </div>
</div>

