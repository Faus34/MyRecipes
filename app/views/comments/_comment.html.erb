<div class="row comment-fix">
  <div class="col-2">
    <section class="chef_info center">
      <%= gravatar_for(comment.chef, size: 60) %>
    </section>
  </div>
  <div class="card col-8 bg-light mb-3">
    <p><%= simple_format comment.description %></p>
    <p>
      <span class="quiet">
        <small>
          Created: <%= time_ago_in_words(comment.created_at) %> ago by <%= comment.chef.chefname %>
        </small>
      </span>
    </p>
  </div>
</div>